<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Collections</title>
    <link href="/styles/blogCollection.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        a{
            text-decoration: none;
            cursor:pointer;
        }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="col-2 center logo-head">
            <a href="/"><img src="/img/logo.png" class=" logo-style"></a>
        </div>
        <div id="Title">
            <h1>Blog Collections</h1>
        </div>
    </header>
    <section id="blogs">
        <h2>Blogs</h2>
        <ul class="blog-grid">
            <% blogArray.forEach(blog => { %>
                <a href="/Post/<%= blog.userUID %>/<%= blog.id %>">
                    <li class="blog-card">
                        <h3 class="blog-card__header"><%= blog.title %></h3>
                        <div class="blog-card__date"><%= blog.postingDate %></div>
                        <p class="blog-card__body"><%- blog.blogBody.replace(/\r?\n/g, "<br>")  %></p>
                    </li>
                </a>
            <% }) %>
        </ul>
    </section>
    </section>
    
</body>
</html>